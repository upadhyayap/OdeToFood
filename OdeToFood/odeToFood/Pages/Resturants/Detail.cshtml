@page "{resturantId:int}"

@model odeToFood.Pages.Resturants.DetailModel
@{
    ViewData["Title"] = "Detail";
}

<h2>Resturant Detail</h2>
@if(Model.Message !=null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<div>
    Id : @Model.Resturant.Id
</div>
<div>
    Name : @Model.Resturant.Name
</div>
<div>
    Location : @Model.Resturant.Location
</div>
<div>
    Cuisine : @Model.Resturant.Cuisine
</div>

<a asp-page="./List" class="btn btn-default">All Resturarents</a>


